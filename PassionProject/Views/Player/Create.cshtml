@model PassionProject.Models.ViewModels.UpdatePlayer

@{
    ViewBag.Title = "View";
}

<h2>View</h2>

@using (Html.BeginForm())
{
    //This will set a hidden input field with value "_RequestVerificationToken"
    //The PlayerController Create Method will look for this token
    //This helps secure the Create() method from being called from other pages.
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Player</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.player.PlayerName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.player.PlayerName, new { htmlAttributes = new { @class = "form-control", Name = "PlayerName" } })
            @Html.ValidationMessageFor(model => model.player.PlayerName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.player.PlayerNumber, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.player.PlayerNumber, new { htmlAttributes = new { @class = "form-control", Name = "PlayerNumber" } })
            @Html.ValidationMessageFor(model => model.player.PlayerNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.player.PlayerPosition, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.player.PlayerPosition, new { htmlAttributes = new { @class = "form-control", Name = "PlayerPosition" } })
            @Html.ValidationMessageFor(model => model.player.PlayerPosition, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.player.PlayerInjuryDescription, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.player.PlayerInjuryDescription, new { htmlAttributes = new { @class = "form-control", Name = "PlayerInjuryDescription" } })
            @Html.ValidationMessageFor(model => model.player.PlayerInjuryDescription, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.player.TeamID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select name="TeamID">
                @foreach (var team in Model.allteams)
                {
                    <option value="@team.TeamID">@team.TeamName</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "List")
</div>
